<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    decoration-success &#45;&#45; green-->
<!--    decoration-danger &#45;&#45; red-->
<!--    decoration-warning &#45;&#45; orange-->
<!--    decoration-muted &#45;&#45; grey (default)-->
<!--    decoration-info &#45;&#45; blue-->

<!--    options="{'clickable': '1'}" statusbar-->

<!--    editable="bottom" new option will be created at the bottom of the list-->
<!--    editable="top" new option will be created at the top of the list-->

<!--    attrs="{-->
<!--        'column_invisible':-->
<!--            [('parent.hide_sales_price', '=', True)]-->
<!--    }" price in pharmacy product-->

    <record id="view_hospital_appointment_tree"
            model="ir.ui.view"
    >
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'"
                  decoration-danger="state == 'canceled'"
                  decoration-info="state == 'in_consultation'"
                  sample="1"
                  multi_edit="1"
            >
                <header>
                    <button name="action_in_consultation"
                            string="In Consultation"
                            class="oe_highlight"
                            type="object"
                    />
                </header>

                <field name="patient_id"
                       string="Patient"
                />
                <field name="ref"
                       optional="hide"
                />
                <field name="gender"
                       optional="show"
                />
                <field name="doctor_id"
                       widget="many2one_avatar_user"
                />
                <field name="booking_date"
                       optional="hide"
                />
                <field name="appointment_time"/>
                <field name="activity_ids"
                       widget="list_activity"
                />
                <field name="state"
                       widget="badge"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'draft'"
                       decoration-danger="state == 'canceled'"
                       decoration-info="state == 'in_consultation'"
                />
                <button name="action_done"
                        type="object"
                        class="fa fa-check btn-success"
                        attrs="{'invisible': [('state' , '!=', 'in_consultation')]}"
                />
                <button name="%(om_hospital.action_cancel_appointment)d"
                        type="action"
                        context="{
                            'default_appointment_id': active_id,
                            'hide_appointment':  1
                        }"
                        class="fa fa-times btn-danger"
                        attrs="{'invisible': [('state' , 'not in', ('in_consultation', 'draft'))]}"
                />
<!--                only many2one relation-->
                <groupby name="patient_id">
                    <button name="action_test"
                            string="Click Me"
                            type="object"
                            class="oe_highlight"
                    />
                    <button name="action_done"
                            string="Mark appointments as done"
                            type="object"
                    />
                    <button name="edit"
                            string="Edit"
                            type="edit"
                    />
                </groupby>

            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form"
            model="ir.ui.view"
    >
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_draft"
                            string="Reset To Draft"
                            type="object"
                            class="oe_highlight"
                    />
                    <button
                            name="action_in_consultation"
                            string="In Consultation"
                            class="oe_highlight"
                            type="object"
                    />
                    <button
                            name="action_done"
                            string="Mark As Done"
                            type="object"
                            states="in_consultation"
                            class="oe_highlight"
                            data-hotkey="k"
                    />
                    <button name="%(om_hospital.action_cancel_appointment)d"
                            string="Cancel"
                            type="action"
                            context="{
                            'default_appointment_id': active_id,
                            'hide_appointment':  1
                            }"
                            states="draft,in_consultation"
                    />

<!--                    <button-->
<!--                            name="action_canceled"-->
<!--                            string="Canceled"-->
<!--                            type="object"-->
<!--                            states="in_consultation,draft"-->
<!--                            data-hotkey="l"-->
<!--                    />-->

                    <field name="state"
                           widget="statusbar"
                           nolabel="1"
                           statusbar_visible="draft,in_consultation,done"
                    />
                </header>

                <sheet>
                    <div class="on_title">
                        <h1>
                            <field name="priority"
                                   widget="priority"
                                   class="mr-3"
                            />
                        </h1>

                    </div>
                    <group>
                        <group>
                            <field name="patient_id"
                                   widget="selection"
                            />
                            <field name="ref"
                                   readonly="1"
                                   force_save="1"
                            />
                            <field name="gender"/>
                            <field name="doctor_id"
                                   widget="many2one_avatar"
                            />
                        </group>
                        <group>
                            <field name="booking_date"
                                   default_focus="1"
                            />
                            <field name="operation_id" />
                            <field name="appointment_time"/>
                            <field name="hide_sales_price"
                                   groups="base.group_no_one"
                            />

                            <button name="action_test"
                                    string="Test Object Button"
                                    type="object"
                                    help="A messsage will be printed in the log"
                                    confirm="Are you sure to execute python code?"
                                    class="oe_highlight"
                                    groups="base.group_no_one"
                            />
                            <button name="%(om_hospital.action_hospital_patient)d"
                                    string="Test Action Button"
                                    type="action"
                                    help="On clicking this button you will be redirected to patient records"
                                    confirm="Are you sure to open the patient action?"
                                    class="oe_highlight"
                                    groups="base.group_no_one"
                            />
                        </group>
                    </group>

                    <notebook>
                        <page string="Prescription"
                              name="prescription"
                        >
                            <field name="prescription"
                                   placeholder="Enter your prescription"
                                   options="{
                                        'collaborative': true,
                                        'resizable': true,
                                        'codeview': true
                                   }"
                            />
                        </page>

                        <page string="Pharmacy"
                              name="pharmacy"
                        >
                            <field name="pharmacy_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="price"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"
                    />
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_activity"
            model="ir.ui.view"
    >
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image(
                                'hospital.patient',
                                'image',
                                record.patient_id.raw_value
                            )"
                             t-att-title="record.patient_id.value"
                             t-att-alt="record.patient_id.value"
                        />
                        <div>
                            <field name="ref"
                                   display="full"
                            />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id="action_hospital_appointment"
            model="ir.actions.act_window"
    >
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="context">
            {}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              action="action_hospital_appointment"
              parent="menu_appointment_master"
              sequence="0"
    />

</odoo>