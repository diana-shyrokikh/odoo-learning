<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Hospital"
                     id="hospital"
                     string="Hospital"
                     data-key="om_hospital"
                >
                    <h2>Hospital Management</h2>
                     <div class="row mt16 o_settings_container"
                          id="hospital_setting"
                     >
                         <div class="o_setting_left_pane"/>
                         <div class="o_setting_right_pane">
                             <span class="o_form_label">
                                 Cancellation before
                             </span>
                            <div class="text_muted content-group mt16">
                                <field name="cancel_days"
                                       class="text-center oe_inline"
                                />
                                <span>days</span>
                            </div>
                         </div>
                     </div>

                </div>
            </xpath>
        </field>
    </record>

    <record id="action_hospital_config_settings" model="ir.actions.act_window">
        <field name="name">Hospital Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'om_hospital'}</field>
    </record>

<!--    <menuitem id="menu_hospital_configuration"-->
<!--        name="Configuration"-->
<!--        parent="menu_configuration"-->
<!--        sequence="100"/>-->

    <menuitem id="menu_hospital_settings"
        name="Settings"
        parent="menu_configuration"
        sequence="0"
        action="action_hospital_config_settings"/>

</odoo>