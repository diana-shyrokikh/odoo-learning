<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="view_hospital_patient_search"
            model="ir.ui.view"
     >
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"
                       string="Patient Name"
                       filter_domain="[
                           '|',
                           ('name', 'ilike', self),
                           ('ref', 'ilike', self)
                       ]"
                />
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>

                <filter name="filter_male"
                        string="Male"
                        domain="[
                            ('gender', '=', 'male')
                        ]"
                />
                <filter name="filter_female"
                        string="Female"
                        domain="[
                            ('gender', '=', 'female')
                        ]"
                />
                <separator/>
                <filter name="filter_kids"
                        string="Kids"
                        domain="[
                            ('age', '&lt;=', '5')
                        ]"
                />
                <separator/>
                <filter name="filter_archived"
                        string="Archived"
                        domain="[
                            ('active', '=', False)
                        ]"
                />

                <group expand="0" string="Group By">
                    <filter string="Gender"
                            name="group_by_gender"
                            context="{
                                'group_by': 'gender'
                            }"
                    />
                </group>

                <searchpanel>
                    <field name="gender"
                           string="Gender"
                           enable_counters="1"
                           icon="fa-users"
                           select="multi"
                    />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_hospital_patient_tree"
            model="ir.ui.view"
    >
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree export_xlsx="0">
                <field name="name" string="Patient Name"/>
                <field name="age"
                       avg="Average Age"
                />
                <field name="gender"/>
                <field name="ref"/>
                <field name="appointment_count"
                       sum="Total Appointment"
                />
                <field name="tag_ids"
                       widget="many2many_tags"
                       options="{
                            'color_field': 'color'
                       }"
                />
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form"
            model="ir.ui.view"
    >
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
<!--                <header>-->
<!--                    <button-->
<!--                            name="print_report"-->
<!--                            string="Print"-->
<!--                            type="object"-->
<!--                            class="oe_highlight"-->
<!--                    />-->
<!--                </header>-->
                <sheet>
                    <div class="oe_button_box"
                          name="button_box"
                    >
                        <button class="oe_stat_button"
                                type="object"
                                name="action_view_appointments"
                                icon="fa-star"
                        >
                            <field string="Appointment"
                                   name="appointment_count"
                                   widget="statinfo"
                            />
                        </button>
                    </div>

                    <div class="alert alert-info text-center o_form_header"
                         role="alert"
                         attrs="{
                            'invisible': [('is_birthday', '=', False)]
                         }"
                    >
                        <a class="close"
                           data-dismiss="alert"
                           href="#"
                        >
                            x
                        </a>
                        <div>
                            <strong>Today is Birthday!</strong>
                        </div>
                        <div>
                            Wish <field name="name" readonly="1"/>
                        </div>
                    </div>
                    <field name="is_birthday" invisible="1"/>
                    <field name="image"
                           widget="image"
                           class="oe_avatar"
                    />
                     <div class="oe_title">
                         <h4>
                             <field name="ref" readonly="1"/>
                         </h4>
                         <h2>
                             <label for="name" string="Name" class="oe_edit_only"/>
                             <field name="name"/>
                         </h2>
                     </div>
                    <group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="gender"
                                   invisible="context.get('hide_gender')"
                                   widget="radio"
                            />
                        </group>
                        <group>
<!--                             widget="many2many_tags"-->
                            <field name="active" invisible="1"/>
                            <field name="appointment_id"/>
                            <field name="tag_ids"
                                   widget="many2many_checkboxes"
                                   options="{
                                        'color_field': 'color'
                                   }"
                            />
                        </group>
                    </group>
                    <group string="Other Information"
                           name="other_info"
                    >
                        <group>
                            <field name="parent" attrs="{'invisible': [('age', '>', 18), ('gender', '=', 'male')]}"/>
                            <field name="marital_status" attrs="{'invisible': [('age', '&lt;=', 18)]}"/>
                            <field name="partner_name"
                                   attrs="{
                                    'readonly': [('marital_status', '!=', 'married')],
                                    'required': [('marital_status', '=', 'married')],
                                    'invisible': [('age', '>', 18)]
                                }"
                            />
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"
                    />
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hospital_patient"
            model="ir.actions.act_window"
    >
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                "search_default_filter_male": 1,
                "search_default_group_by_gender": 1,
                "active_test": False,
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>

    <menuitem id="menu_patient"
              name="Patients"
              action="action_hospital_patient"
              parent="menu_patient_master"
              sequence="0"
    />




